{% extends 'base.html.twig' %}

{% block title %}Joke{% endblock %}

{% block body %}
    <h1>Joke</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ joke.id }}</td>
            </tr>
            <tr>
                <th>Blague</th>
                <td>{{ joke.content }}</td>
            </tr>
            <tr>
                <th>Réponse</th>
                <td>{{ joke.answer }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_joke_index') }}">Retourner à la liste des blagues</a>

    <a class="mx-4" href="{{ path('app_joke_edit', {'id': joke.id}) }}">Modifier</a>

    {{ include('joke/_delete_form.html.twig') }}
{% endblock %}
